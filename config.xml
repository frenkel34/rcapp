<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.okta.oidc-emirates-demo"
        version   = "3.1.1">
    <name>Shell PAA</name>
    <description>
        App to aquire physical access to Shell properties. This is part of the Okta POC. 
    </description>
	<author href="http://www.okta.com" email="frank.benus@okta.com">Frank Benus | Okta</author>
	<preference name="phonegap-version" value="3.3.0" />  
	<preference name="orientation" value="default" />
	<preference name="fullscreen" value="false" />
	<platform name="android">
	<icon src="res/icons/android/icon-36-ldpi.png" qualifier="ldpi" />
	<icon src="res/icons/android/icon-48-mdpi.png" qualifier="mdpi" />
	<icon src="res/icons/android/icon-72-hdpi.png" qualifier="hdpi" />
	<icon src="res/icons/android/icon-96-xhdpi.png" qualifier="xhdpi" />
	<icon src="res/icons/android/icon-144-xxhdpi.png" qualifier="xxhdpi" />
	<icon src="res/icons/android/icon-192-xxxhdpi.png" qualifier="xxxhdpi" />
	</platform>
	<icon src="res/icon.png" />
	<plugin name="cordova-plugin-inappbrowser" spec="https://github.com/apache/cordova-plugin-inappbrowser" />
	<access origin="*" />
</widget>

